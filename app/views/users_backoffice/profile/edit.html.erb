                            <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Senha">
                        </div>
                        <div class="col-sm-6">
                            <input type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Confirmação da senha">

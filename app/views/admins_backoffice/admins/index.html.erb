<h1>Listando administradores</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>E-mail</th>
        <th>
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle"	do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin|%>
        <tr>
          <td> <%= admin.id %> </td>
          <td> <%= admin.email %> </td>
          <td style="width: 8%">
            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle"	do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_admin_path(admin), data: {turbo_method: :delete, turbo_confirm: "Tem certeza que quer excluir esse administrador?"}, class: "btn btn-danger btn-circle"	do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<h1>Listando perguntas</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Descrição</th>
        <th>Assunto</th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle"	do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>

      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question|%>
        <tr>
          <td> <%= question.id %> </td>
          <td> <%= question.description.truncate(50) %> </td>
          <td> <%= question.subject.description %> </td>
          <td style="width: 8%">
            <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle"	do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_question_path(question), data: {turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir essa pergunta?"}, class: "btn btn-danger btn-circle"	do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <%= paginate @questions %>
  </div>
  
</div>
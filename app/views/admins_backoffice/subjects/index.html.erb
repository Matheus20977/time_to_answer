<h1>Listando assuntos/áreas</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Descrição</th>
        <th>
          <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle"	do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject|%>
        <tr>
          <td> <%= subject.id %> </td>
          <td> <%= subject.description %> </td>
          <td style="width: 8%">
            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle"	do %>
              <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to admins_backoffice_subject_path(subject), data: {turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esse assunto/área?"}, class: "btn btn-danger btn-circle"	do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center">
    <%= paginate @subjects %>
  </div>
  
</div>
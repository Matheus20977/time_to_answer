<% flash.each do |type, msg| %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>

<!-- Outer Row -->
<div class="row justify-content-center mx-auto w-50">
    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">

                      <div class="p-5">
                          <div class="text-center">
                              <h1 class="h4 text-gray-900 mb-4">Login administrativo</h1>
                          </div>

                          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"user") do |f| %>

                            <div class="form-group">
                              <%= f.email_field :email, autofocus: true, placeholder:"Digite o e-mail", class:"form-control form-control-user" %>
                            </div>

                            <div class="form-group">
                              <%= f.password_field :password, placeholder:"Digite a senha", class:"form-control form-control-user" %>
                            </div>

                            <% if devise_mapping.rememberable? %>
                              <div class="form-group">
                                <div class="custom-control custom-checkbox small">
                                  <%= f.check_box :remember_me, class:"custom-control-input" %>
                                  <%= f.label :remember_me, class:"custom-control-label" %>
                                </div>
                              </div>
                            <% end %>

                            <div class="actions">
                              <%= f.submit "Entrar", class:"btn btn-primary btn-user btn-block" %>
                            </div>
                
                          <% end %>
                      </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>